<layout version="0.1.0">
    <checkout_onepage_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <script>itwin/postcodecomplete/js/checkout.js</script>
            </action>
        </reference>
        <reference name="after_body_start">
            <block type="page/html" name="getbaseurl" template="itwin/postcodecomplete/getbaseurl.phtml" />
        </reference>
    </checkout_onepage_index>
    
    <customer_address_new>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <script>itwin/postcodecomplete/js/customer.js</script>
            </action>
        </reference>
        <reference name="after_body_start">
            <block type="page/html" name="getbaseurl" template="itwin/postcodecomplete/getbaseurl.phtml" />
        </reference>
    </customer_address_new>
    
    <customer_address_form>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <script>itwin/postcodecomplete/js/customer.js</script>
            </action>
        </reference>        
        <reference name="after_body_start">
            <block type="page/html" name="getbaseurl" template="itwin/postcodecomplete/getbaseurl.phtml" />
        </reference>        
    </customer_address_form>
</layout>